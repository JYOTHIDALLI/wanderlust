<% layout("/layouts/boilerplate") %>

<h3 class="mb-4">All Listings</h3>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-1 g-4">
  <% for(let listing of allListings) { %>
    <div class="col">
      <div class="card listing-card h-100" style="width: 20rem;">
        <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>" style="height: 20rem; object-fit: cover;" />
        <div class="card-body">
          <h5 class="card-title"><%= listing.title %></h5>
          <p class="card-text">â‚¹<%= listing.price.toLocaleString("en-IN") %> /night</p>
          <a href="/listings/<%= listing._id %>" class="stretched-link"></a>
        </div>
      </div>
    </div>
  <% } %>
</div>
